# .htaccess für Apache
# Schützt sync.php vor Web-Zugriff

# Für Apache 2.2
<Files "sync.php">
    Order Deny,Allow
    Deny from all
</Files>

# Für Apache 2.4+
<Files "sync.php">
    Require all denied
</Files>

# Zusätzlich: PHP-Fehler nicht im Browser anzeigen
php_flag display_errors Off
php_flag log_errors On

